# =============================================================================
# AI Skill Gap Analyst - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys and configuration

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.1
ANTHROPIC_MAX_TOKENS=4000

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# MARKET INTELLIGENCE API
# =============================================================================
# JSearch API (via RapidAPI) for live job market data
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=jsearch.p.rapidapi.com
JSEARCH_ENDPOINT=https://jsearch.p.rapidapi.com/search

# LinkedIn API (for market intelligence)
# Register a developer application on the LinkedIn Developer Platform to get these keys
LINKEDIN_API_KEY=your_linkedin_api_key_here
LINKEDIN_API_SECRET=your_linkedin_api_secret_here

# Alternative job search APIs (if you want to add more sources)
# ADZUNA_API_ID=your_adzuna_id
# ADZUNA_API_KEY=your_adzuna_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Analysis Modes
USE_RAG=true
USE_LLM_ANALYST=true
USE_LLM_REPORT=true
USE_SPACY_PARSER=false
USE_SIMPLE_MODE=false

# LLM Provider Selection
LLM_PROVIDER=auto
# Options: auto, openai, anthropic, ollama

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================
# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
HOST=localhost
PORT=5001
MAX_CONTENT_LENGTH=10485760
# 10MB in bytes (10 * 1024 * 1024)

# WebSocket Configuration
CORS_ALLOWED_ORIGINS=*

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
# Upload Configuration
ALLOWED_EXTENSIONS=pdf,doc,docx,txt
MAX_FILE_SIZE_MB=10
UPLOAD_FOLDER=temp_uploads

# PDF Processing
PDF_PARSER=pdfplumber
# Options: pdfplumber, pypdf2

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
# Timeout Settings (in seconds)
ANALYSIS_TIMEOUT=300
API_REQUEST_TIMEOUT=30
LLM_REQUEST_TIMEOUT=60

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY=1

# Market Intelligence Settings
MAX_JOB_RESULTS=50
MARKET_ANALYSIS_DEPTH=standard
# Options: basic, standard, detailed

# Skill Analysis Settings
SKILL_CONFIDENCE_THRESHOLD=0.7
IMPLICIT_SKILL_DETECTION=true
TRANSFERABLE_SKILL_ANALYSIS=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Enable caching for API responses
ENABLE_CACHING=true
CACHE_TTL=3600
# Cache time-to-live in seconds (1 hour)

# Cache Directory
CACHE_DIR=.cache

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Development Mode
DEV_MODE=false

# Debug Features
VERBOSE_LOGGING=false
SAVE_INTERMEDIATE_RESULTS=false
ENABLE_PROFILING=false

# Mock Data (for testing without API keys)
USE_MOCK_DATA=false
MOCK_MARKET_DATA=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Security
SECURE_COOKIES=false
SESSION_TIMEOUT=3600

# Performance
WORKER_THREADS=4
MAX_CONCURRENT_ANALYSES=10

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Database (if you want to add persistence)
# DATABASE_URL=sqlite:///skill_gap_analyst.db

# Redis (for caching and session management)
# REDIS_URL=redis://localhost:6379/0

# Sentry (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Experimental Features
ENABLE_BATCH_PROCESSING=false
ENABLE_SKILL_RECOMMENDATIONS=true
ENABLE_SALARY_ANALYSIS=true
ENABLE_LEARNING_PATH_GENERATION=true

# UI Features
ENABLE_DARK_MODE=true
ENABLE_EXPORT_OPTIONS=true
ENABLE_COMPARISON_MODE=false

# =============================================================================
# LOCALIZATION
# =============================================================================
# Language and Region
DEFAULT_LANGUAGE=en
DEFAULT_REGION=US
CURRENCY=USD

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and fill in your actual API keys
# 2. Never commit .env file to version control
# 3. For production, use environment variables instead of .env file
# 4. Minimum required: OPENAI_API_KEY or ANTHROPIC_API_KEY for LLM features
# 5. RAPIDAPI_KEY is required for live market data (USE_RAG=true)
# 6. The system will work in fallback mode without API keys but with limited functionality
