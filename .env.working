# =============================================================================
# AI Skill Gap Analyst - Working Configuration
# =============================================================================
# Copy this to .env for optimal performance

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# Add your OpenAI API key here for best results
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=4000

# =============================================================================
# MARKET INTELLIGENCE API
# =============================================================================
# Add your RapidAPI key here for live job market data
RAPIDAPI_KEY=aea19b7037mshe9d8fbac7ae67d2p12f989jsn97c0239d5262
RAPIDAPI_HOST=jsearch.p.rapidapi.com
JSEARCH_ENDPOINT=https://jsearch.p.rapidapi.com/search

# =============================================================================
# APPLICATION CONFIGURATION - OPTIMAL SETTINGS
# =============================================================================
# Analysis Modes - Enable for best results
USE_RAG=true
USE_LLM_ANALYST=true
USE_LLM_REPORT=true
USE_SPACY_PARSER=false
USE_SIMPLE_MODE=false

# LLM Provider Selection - Using Ollama Qwen
LLM_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2:1.5b

# Logging Configuration
LOG_LEVEL=INFO
VERBOSE_LOGGING=false

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
HOST=localhost
PORT=5001
MAX_CONTENT_LENGTH=10485760

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
ALLOWED_EXTENSIONS=pdf,doc,docx,txt
MAX_FILE_SIZE_MB=10
PDF_PARSER=pdfplumber

# =============================================================================
# ANALYSIS CONFIGURATION
# =============================================================================
ANALYSIS_TIMEOUT=300
API_REQUEST_TIMEOUT=30
LLM_REQUEST_TIMEOUT=60
MAX_RETRIES=3
RETRY_DELAY=1

# Market Intelligence Settings
MAX_JOB_RESULTS=50
MARKET_ANALYSIS_DEPTH=standard

# Skill Analysis Settings
SKILL_CONFIDENCE_THRESHOLD=0.7
IMPLICIT_SKILL_DETECTION=true
TRANSFERABLE_SKILL_ANALYSIS=true

# =============================================================================
# FALLBACK CONFIGURATION
# =============================================================================
# Enable if you don't have API keys yet
USE_MOCK_DATA=false
MOCK_MARKET_DATA=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SKILL_RECOMMENDATIONS=true
ENABLE_SALARY_ANALYSIS=true
ENABLE_LEARNING_PATH_GENERATION=true
ENABLE_EXPORT_OPTIONS=true
